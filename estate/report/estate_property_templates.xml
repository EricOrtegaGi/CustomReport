<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_property_offers">
        <t t-foreach="docs" t-as="property">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>
                            <span t-field="property.name"/>
                        </h2>
                        <div>
                            <strong>Comprador: </strong>
                            <span t-field="property.buyer_id"/>
                        </div>
                        <div>
                            <strong>Comercial: </strong>
                            <span t-field="property.salesperson_id"/>
                        </div>
                        <div>
                            <strong>Expected Price: </strong>
                            <span t-field="property.expected_selling_price"/>
                        </div>
                        <div>
                            <strong>Postal Code: </strong>
                            <span t-field="property.postcode"/>
                        </div>
                        <div>
                            <strong>Número de Habitaciones: </strong>
                            <span t-field="property.bedrooms"/>
                        </div>
                        <div>
                            <strong>m2: </strong>
                            <span t-field="property.area"/>
                        </div>
                        <div>
                            <strong>Any de Construccio: </strong>
                            <span t-field="property.any_construccio"/>
                        </div>
                        <div>
                            <strong>Lavabos: </strong>
                            <span t-field="property.banys"/>
                        </div>
                        
                        <div>
                            <strong>Parking: </strong>
                            <t t-if="property.parking">Sí</t>
                            <t t-else="">No</t>
                        </div>
                        <div>
                            <strong>Estat: </strong>
                            <span t-field="property.state"/>
                        </div>
                        <div>
                            <strong>Tipo: </strong>
                            <span t-field="property.Type_id"/>
                        </div>
                        <div>
                            <strong>Description: </strong>
                            <span t-field="property._description"/>
                        </div>
                        <!-- Agrega más campos aquí según sea necesario -->
                        <table class="table">
                            <thead>
                                <th colspan="3">
                                    <strong>Offers</strong>
                                </th>
                                <tr>
                                    <th>Partner</th>
                                    <th>Price</th>
                                    <th>Estat</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="offers" t-value="property.mapped('offer_ids')"/>
                                <tr t-foreach="offers" t-as="offer">
                                    <td>
                                        <span t-field="offer.partner_id.name"/>
                                    </td>
                                    <td>
                                        <span t-field="offer.price"/>
                                    </td>
                                    <td>
                                        <span t-field="offer.status"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
