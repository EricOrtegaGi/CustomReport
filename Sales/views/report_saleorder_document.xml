<odoo>
    <data>
        <template id="report_saleorder_inherit" inherit_id="sale.report_saleorder_document">
            <xpath expr="//table[@name='sale_order_line_table']/thead/tr" position="before">
                <tr>
                    <th><strong>Num Articles</strong></th>
                    <th><strong>Preferred Email</strong></th>
                </tr>
            </xpath>
            <xpath expr="//table[@name='sale_order_line_table']/tbody/t/t/tr" position="before">
                <tr>
                    <td>
                        <span t-field="doc.num_articles"/>
                    </td>
                    <td>
                        <span t-field="doc.preferred_email"/>
                    </td>
                </tr>
            </xpath>
        </template>
    </data>
</odoo>