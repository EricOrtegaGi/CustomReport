<odoo>
    <!-- ... altres registres ... -->

    <!-- Modificar la vista de la comanda per a mostrar els nous camps -->
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="num_articles"/>
                <field name="preferred_email"/>
            </field>
        </field>
    </record>

    <!-- Afegir una nova opció de menú per a mostrar la vista SQL -->
    <record id="action_sales_module_report" model="ir.actions.act_window">
        <field name="name">Sales Module Report</field>
        <field name="res_model">sales.module.report</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_sales_module_report" name="Sales Module Report" action="action_sales_module_report"/>
</odoo>